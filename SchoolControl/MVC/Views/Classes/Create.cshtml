@model Data.Classes

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Classes</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.id_class)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.id_class)
            @Html.ValidationMessageFor(model => model.id_class)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.id_teacher, "Teacher")
        </div>
        <div class="editor-field">
            @Html.DropDownList("id_teacher", String.Empty)
            @Html.ValidationMessageFor(model => model.id_teacher)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.id_subject, "Subject")
        </div>
        <div class="editor-field">
            @Html.DropDownList("id_subject", String.Empty)
            @Html.ValidationMessageFor(model => model.id_subject)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
